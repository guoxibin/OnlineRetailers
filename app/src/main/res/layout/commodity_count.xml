<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/购买数量"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top|end">

        <Button
            android:id="@+id/goods_add"
            android:layout_width="39dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_commodity_add_circle_24" />

        <TextView
            android:id="@+id/goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/square"
            android:text="@string/_1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/goods_minus"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_commodity_minus_24" />

    </LinearLayout>



</LinearLayout>